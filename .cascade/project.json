{
  "name": "llmstxt.directory",
  "description": "A directory for managing and standardizing AI documentation implementations",
  "version": "1.0.0",
  "stack": {
    "backend": {
      "language": "PHP",
      "version": "8.2",
      "database": "SQLite3",
      "webserver": "nginx"
    },
    "frontend": {
      "framework": "Vanilla",
      "languages": ["HTML5", "CSS3", "JavaScript"],
      "fonts": ["Space Grotesk"]
    },
    "deployment": {
      "platform": "Laravel Forge",
      "environments": ["production", "staging"],
      "branches": {
        "production": "production",
        "staging": "staging"
      }
    },
    "development": {
      "environment": "Herd",
      "platform": "macOS"
    }
  }
}
